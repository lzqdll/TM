<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="proxool.maximum-connection-count">15</property>
		<property name="proxool.minimum-connection-count">5</property>
		<!-- <property name="hbm2ddl.auto">update</property> -->
		<property name="show_sql">false</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hibernate.use_sql_comments">false</property>
		<property name="connection.useUnicode">true</property>
		<property name="connection.characterEncoding">utf8</property>
		<!-- <property name="hbm2ddl.auto">update</property><mapping class="chris.kcnElearning.model.Answer" 
			/> <mapping class="chris.kcnElearning.model.Question" /> <mapping class="chris.kcnElearning.model.Qcatalog" 
			/> <mapping class="chris.kcnElearning.model.UsrRole" /> <mapping class="chris.kcnElearning.model.Quser" 
			/> -->
	</session-factory>
</hibernate-configuration>